<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartedActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creation de couple"
        android:id="@+id/lblindice1"
/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add user"
        android:id="@+id/btnAddUser"
        android:layout_below="@+id/lblindice1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finished"
        android:id="@+id/btnFinished"
        android:layout_below="@+id/lblindice1"
        android:layout_toRightOf="@+id/btnAddUser"
        android:layout_toEndOf="@+id/btnAddUser" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Nom"
        android:id="@+id/lblNom"
        android:layout_below="@+id/btnAddUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/nom"
        android:layout_below="@+id/btnAddUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Prenom"
        android:id="@+id/lblPrenom"
        android:layout_below="@+id/lblNom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/prenom"
        android:layout_below="@+id/nom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sexe"
        android:id="@+id/lblSexe"
        android:layout_below="@+id/lblPrenom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prenom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/myRadioGroup"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/male"
            android:text="M" />
        <RadioButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/femelle"
            android:text="F" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Login"
        android:id="@+id/lblLogin"
        android:layout_below="@+id/lblSexe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/login"
        android:layout_below="@+id/myRadioGroup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Password"
        android:id="@+id/lblPassword"
        android:layout_below="@+id/lblLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/pwd"
        android:layout_below="@+id/login"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
